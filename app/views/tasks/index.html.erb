<div class="row">
  <aside class="col-sm-4">
    <%= form_with(model: @task, local: true) do |f| %>
      <div class="form-group">
        <%= f.label :status, 'ステータス', class:'control-label' %>
        <%= f.text_area :status, class: 'form-control', rows: 1 %>
        <%= f.label :content, 'タスク', class:'control-label' %>
        <%= f.text_area :content, class: 'form-control', rows: 1 %>
      </div>
      <%= f.submit '作成', class: 'btn btn-primary btn-block' %>
    <% end %>
  </aside>
<div class="col-sm-8">
    <%= render 'tasks/tasks', tasks: @tasks %>
</div>
